@model EntityLayer.Concrete.Guide
@{
    ViewData["Title"] = "AddGuide";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h1>Rehber Ekleme Sayfası</h1>
<form method="post">
    <div class="form-group">
        @Html.Label("Ad Soyad")
        <input type="text"  asp-for="Name" class="form-control"/> @*burada girdiğimiz bir değer database kayıt etmesi için kullanılır*@
        <span asp-validation-for="Name" class="text-danger"></span> @*burada ise validatordaki hata mesajlarını göstermek için kullanılır*@
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Görsel")
        <input type="text" asp-for="Image" class="form-control" /> 
        <span asp-validation-for="Image" class="text-danger"></span>

    </div>
    <br />
    <div class="form-group">
        @Html.Label("Instagram URL")
        <input type="text" asp-for="İnstagramUrl" class="form-control" />
    </div>
    <br />
    <div class="form-group">
        @Html.Label("Twitter URl")
        <input type="text" asp-for="TwitterUrl" class="form-control" />

    </div>
    <br />
    <div class="form-group">
        @Html.Label("Açklama")
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>

    </div>
    <br />
    <button class="btn btn-primary">Kaydet</button>
</form>
